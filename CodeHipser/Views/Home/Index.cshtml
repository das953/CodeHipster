@section Scripts
{
    <script src="~/lib/jqTree/tree.jquery.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/api/Categories/',
                dataType: 'json',
                async: true,
                type: 'GET',
                success: function (data) {
                    $('#menuTree').tree({
                        data: data,
                        closedIcon: $('<i class="glyphicon glyphicon-chevron-right"></i>'),
                        openedIcon: $('<i class="glyphicon glyphicon-chevron-down"></i>'),
                        selectable: false
                    });
                }
            });
            $('#menuTree').bind(
                'tree.click',
                function (event) {
                    if (event.node.sectionTypeId==@SectionType.Course) {
                        goToCourse(event.node);
                    }
                    else if (event.node.sectionTypeId == @SectionType.TextLesson) {
                        $.ajax({
                            url: '/api/Lessons/' + event.node.id,
                            dataType: "json"
                        }).success(function (data) {
                            $('#contentBlock').append(data.content);
                        });
                        //$("#contentBlock").load('/api/Lessons/' + event.node.id);
                    }
                    else if (event.node.sectionTypeId==@SectionType.Quiz) {
                        $("#contentBlock").load('/api/Categories/10');
                    }
                }
            );
        });
        function goToCourse(node) {
            $.ajax({
                url: '/api/Categories/' + node.id,
                dataType: 'json',
                async: true,
                type: 'GET',
                success: function (data) {
                    $('#menuTree').tree('loadData', data);
                }
            });
        }
        function goToLesson(node) {
            $("#contentBlock").load('/api/Categories/12');
            alert("Lesson!!!!!!!!!!!!!");
        }
        function goToQuiz(node) {
            $("#contentBlock").load('/api/Categories/10');
            alert("Quiz!!!!!!!!!!!!!");
        }
    </script>
    
}
