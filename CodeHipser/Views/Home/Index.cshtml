<div class="row">

    <!-------------------------------Navigation Sidebar----------------------------------->
    <div class="scroll  col-sm-4">
        <aside>
            <div id="menuTree"></div>
        </aside>
    </div >


    <!---------------------------------Content Block-------------------------------------->
    <div class="classcontentblock1 col-sm-7" >
        @{await Html.RenderPartialAsync("_GetMessage");}

    </div>  

    <div class="classcontentblock1 col-sm-7">
        @{await Html.RenderPartialAsync("_GetStatus");}

    </div>

    <article id="contentBlock" class="classcontentblock col-sm-7  scroll">
        55555
    </article>
</div>




@section Scripts
{
    <script src="~/lib/jqTree/tree.jquery.js"></script>
    <script>



        $(document).ready(function () {
            $.ajax({
                url: '/api/Categories/',
                dataType: 'json',
                async: true,
                type: 'GET',
                success: function (data) {
                    $('#menuTree').tree({
                        data: data,
                        closedIcon: $('<i class="glyphicon glyphicon-chevron-right"></i>'),
                        openedIcon: $('<i class="glyphicon glyphicon-chevron-down"></i>'),
                        selectable: false
                    });
                }
            });
            $('#menuTree').bind(
                'tree.click',
                function (event) {
                    if (event.node.sectionTypeId==@SectionType.Course) {
                        goToCourse(event.node);
                    }
                    else if (event.node.sectionTypeId == @SectionType.TextLesson || event.node.sectionTypeId == @SectionType.VideoLesson) {
                        goToLesson(event.node);
                    }
                    else if (event.node.sectionTypeId == @SectionType.Quiz) {
                        goToQuiz(event.node);
                    }
                }
            );
        });

        
        function goToCourse(node) {
            $.ajax({
                url: '/api/Categories/' + node.id,
                dataType: 'json',
                type: 'GET',
                success: function (data) {
                    $('#menuTree').tree('loadData', data);
                }
            });
        }

        function goToLesson(node) {
            $.ajax({
                url: '/api/Lessons/' + node.id,
                dataType: "json",
                type: 'GET',
                success: function (data) {
                    $('#contentBlock').html(data.content);
                }
            });
        }

        function goToQuiz(node) {

        }
    </script>
}

