@model CodeHipser.Models.Dtos.QuizDto
@{
    ViewData["Title"] = "Quiz";
    var _currentCount = 0;
    var _totalCount = 0;
    var _succesessCount = 0;
    var _questions = Model.Questions.ToList();

}





    <div id="ttt">
        @await Component.InvokeAsync("QuizQuestion", new
   {
       currentQuestion = _questions[_currentCount],
       currentCount = _currentCount,
       totalCount = _totalCount,
       themeName = Model.Parent.Name
   })
    </div>


    <br/>

    <div class="row">

       
        @Url.Action("InvokeAsync", "ViewComponents/QuizQuestionViewComponent", new
   {
       currentQuestion = _questions[_currentCount],
       currentCount = _currentCount,
       totalCount = _totalCount,
       themeName = Model.Parent.Name
   })
        <div style="text-align:left; padding:0" class="col-md-6">
            <button class="btn-default" data-target="ttt" >Previous</button>
        </div>

        <div style="text-align:right; padding:0" class="col-md-6">
            <button class="btn-default" type="submit">Next</button>
        </div>

        <a data-target=""></a>

    </div>







